<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="6"
    android:background="#000000">                               <!-- 使用网格布局 -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        android:layout_columnSpan="4"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:gravity="right|bottom"
        android:text="0"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:textSize="100sp"
        android:textColor="#ffffff"/>  <!-- 输入输出显示 -->

    <Button android:id="@+id/btn_ac" android:text="AC"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape"
        android:onClick="onClick"
        />

    <Button android:id="@+id/btn_zf" android:text="+/-"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape"
        android:onClick="onClick"/>

    <Button android:id="@+id/btn_qy" android:text="%"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape"
        android:onClick="onClick"/>

    <Button android:id="@+id/btn_div" android:text="÷"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_orange"
        android:textColor="#ffffff"
        android:onClick="onClick"/> <!-- 第一行功能:清空，正负号，取余，除法 -->

    <Button android:id="@+id/btn_7" android:text="7"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_grey"

        android:textColor="#ffffff"
        android:onClick="onClick"/>

    <Button android:id="@+id/btn_8" android:text="8"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_grey"
        android:textColor="#ffffff"
        android:onClick="onClick"/>

    <Button android:id="@+id/btn_9" android:text="9"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_grey"
        android:textColor="#ffffff"
        android:onClick="onClick"/>

    <Button android:id="@+id/btn_time" android:text="x"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_orange"
        android:textColor="#ffffff"
        android:onClick="onClick"/><!-- 第二行功能：三个数字，乘法 -->

    <Button android:id="@+id/btn_4" android:text="4"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_grey"
        android:textColor="#ffffff"
        android:onClick="onClick"/>

    <Button android:id="@+id/btn_5" android:text="5"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_grey"
        android:textColor="#ffffff"
        android:onClick="onClick"/>

    <Button android:id="@+id/btn_6" android:text="6"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_grey"
        android:textColor="#ffffff"
        android:onClick="onClick"/>

    <Button android:id="@+id/btn_minus" android:text="-"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_orange"
        android:textColor="#ffffff"
        android:onClick="onClick"/><!-- 第三行功能：三个数字，减法 -->

    <Button android:id="@+id/btn_1" android:text="1"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_grey"
        android:textColor="#ffffff"
        android:onClick="onClick"/>

    <Button android:id="@+id/btn_2" android:text="2"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_grey"
        android:textColor="#ffffff"
        android:onClick="onClick"/>

    <Button android:id="@+id/btn_3" android:text="3"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_grey"
        android:textColor="#ffffff"
        android:onClick="onClick"/>

    <Button android:id="@+id/btn_add" android:text="+"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_orange"
        android:textColor="#ffffff"
        android:onClick="onClick"/><!-- 第四行功能：三个数字，加法 -->


    <Button android:id="@+id/btn_0" android:text="0"

        android:layout_columnSpan="2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_grey"
        android:textColor="#ffffff"
        android:onClick="onClick"/>

    <Button android:id="@+id/btn_dot" android:text="."

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_grey"

        android:textColor="#ffffff"
        android:onClick="onClick"/>

    <Button android:id="@+id/btn_equal" android:text="="

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:background="@drawable/button_shape_orange"
        android:textColor="#ffffff"
        android:onClick="onClick"/><!-- 第五行功能:零，小数点，等于-->


</GridLayout>